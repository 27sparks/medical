= form_for(@therapy_entry) do |f|
  = render 'shared/error_messages', item: @therapy_entry
  
  = f.label :occured_at
  = f.select :occured_at, ["nachts", "morgens", "vormittags", "mittags", "nachmittags", "abends"]
  = f.date_select :date

  = f.label :therapy_type
  = f.select :therapy_type, ["Krankengymnastik", "Wassergymnastik", "Massage", "Osteopathie"]
 
  = f.label :intensity
  = f.select :intensity, ["sanft", "mittel", "stark"]
 
  = f.label :duration
  = f.select :duration, [15,30,45,60]
 
  = f.label :comment
  = f.text_area :comment, :rows => "5"

  = f.submit "Speichern", class: "btn btn-primary btn-large"
  = link_to 'Back', root_path, class: "btn btn-large back-btn"
 