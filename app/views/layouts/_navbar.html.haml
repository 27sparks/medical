%header.navbar.navbar-fixed-top
  .navbar-inner
    .container
      #logo= link_to "Medical Diary", root_path
      %nav
        %ul.nav.pull-right
          %li= link_to "Home", root_path
          - if logged_in?
            %li= link_to "Profil", current_user
            %li= link_to "Einstellungen", edit_user_path(current_user)
            %li= link_to "Log out", logout_path, method: "delete"
          - else
            %li= link_to "Registrieren", register_path
            %li= link_to "Log in", login_path
