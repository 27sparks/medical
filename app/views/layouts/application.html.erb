<!DOCTYPE html>
<html>
<head>
  <title>Medical DiaryÂ | <%= yield(:title) %></title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <%= render "layouts/navbar" %>

    <div class="container">
      <% flash.each do |key, value| %>
        <div class="alert alert-<%= key %>"><%= value %></div>
      <% end %>
      <div class="row">
        <div class="span6">
          <%= yield %>
        </div>
        <% if logged_in? %>
        <div class="span6 greybox">
          <%= render "shared/sidebar" %>
        </div>
        <% end %>
      </div>

      <div class="row">
        <div class="span12">
          <%= render "layouts/footer" %>
        </div>
      </div>
    </div>
</body>
</html>
