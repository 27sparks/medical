%header.navbar.navbar-fixed-top
  .navbar-inner
    .container
      #logo= link_to "Meta", root_path, id: "Home"
      %nav
        .nav.pull-right          
          - if logged_in?
            - if current_user.role == 'admin'
              .btn-group
                %a.btn.btn-inverse.dropdown-toggle{ data: {toggle: "dropdown"}, href: '#'}
                  Admin
                  %span.caret
                %ul.dropdown-menu
                  %li= link_to "Benutzer", users_path
            .btn-group    
              -if can? :show, current_user
                = link_to "Profil", user_path(current_user), class: "btn"
              = link_to "Log out", logout_path, method: "delete", class: "btn"
          - else
            .btn-group
              = link_to "Registrieren", register_path, class: "btn btn-success"
              = link_to "Log in", login_path, class: "btn btn-success"
