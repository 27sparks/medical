= form_for(@pain_entry) do |f|
  = render 'shared/error_messages', item: @pain_entry

  = f.label :pain_id
  = f.number_field :pain_id

  = f.label :value
  = f.range_field :value, options = { min: 0, max: 100, step: 1 }

  = f.label :duration
  = f.select :duration, [:impuls, :ein_paar_minuten, :eine_stunde, :drei_stunden, :sechs_stunden, :ganztaegig]

  = f.label :comment
  = f.text_field :comment

  = f.submit
